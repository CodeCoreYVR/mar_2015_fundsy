<div class="col-md-9">
  <h1><%= @campaign.title %></h1>
  <p><%= @campaign.description %></p>
  <p>Goal: <%= number_to_currency(@campaign.goal) %></p>
  <p>Ends On: <%= @campaign.ends_on.strftime("%Y-%b-%d") %></p>
  <% if can? :edit, @campaign %>
    <%= link_to "Edit", edit_campaign_path(@campaign), class: "btn btn-info" %>
  <% end %>

  <% if can? :destroy, @campaign %>
    <%= link_to "Delete", @campaign, class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>

  <% if (can? :publish, @campaign) && @campaign.draft? %>
    <%= link_to "Publish", campaign_publishings_path(@campaign), class: "btn btn-info", method: :post, data: {confirm: "Are you sure you want to publish this campaign?"} %>
  <% end %>
</div>
<div class="col-md-3">
  <% @campaign.reward_levels.each do |reward_level| %>
    <div class="well">
      <h3><%= number_to_currency(reward_level.amount) %></h3>
      <p><%= reward_level.description %></p>
    </div>
  <% end %>
</div>